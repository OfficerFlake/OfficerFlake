<Window x:Class="WpfSandbox.Testing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="WpfSandBox" Height="720" Width="1080" d:DataContext="{d:DesignData }">
	<StackPanel>
		<ScrollViewer Height="580" VerticalScrollBarVisibility="Visible">
			<Grid Margin="15" x:Name="TestGrid">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="62"/>
					<ColumnDefinition Width="50"/>
					<ColumnDefinition Width="70"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
			</Grid>
		</ScrollViewer>
		<Button x:Name="TestButton" Content="Add" Click="TestButton_OnClick" />
		<Button x:Name="TestButton2" Content="Hide" Click="TestButton2_OnClick" />
	</StackPanel>
</Window>